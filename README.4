public void addCourse(Connection con, String cid, String name, String price, String num) throws Exception {
		String sql = "insert into t_good values (?,?,?,?)";
		PreparedStatement pm = con.prepareStatement(sql);
		pm.setString(1, cid);
		pm.setString(2, name);
		pm.setString(3, price);
		pm.setString(4, num);
		pm.executeUpdate();
		con.close();

